<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_item_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
    android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
    android:background="@color/white"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/text_margin"
        android:background="@drawable/ripple">

        <RelativeLayout
            android:id="@+id/rela_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_margin"
            android:background="@drawable/round"
            android:backgroundTint="@color/cyan_dark"
            android:transitionName="shareView" />

        <TextView
            android:id="@+id/recycler_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/rela_round"
            android:text="item title"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/recycler_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_item_1"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:layout_toEndOf="@id/rela_round"
            android:text="second option"
            android:lines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/recycler_item_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_item_2"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:layout_toEndOf="@id/rela_round"
            android:text="additional option"
            android:lines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/digitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:gravity="center"
            android:text="A"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/rela_round" />

    </RelativeLayout>
</android.support.v7.widget.CardView>